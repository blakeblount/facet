# Facet Development Environment Variables
# Copy this file to .env and adjust values as needed

# Database connection (matches docker-compose.yml defaults)
DATABASE_URL=postgres://facet:facet_dev_password@localhost:5432/facet_dev

# API Server
HOST=0.0.0.0
PORT=3001

# S3-compatible storage (DigitalOcean Spaces)
S3_BUCKET=facet-dev
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:5173

# Logging
RUST_LOG=api=debug,tower_http=debug
